<idea-plugin>
    <id>gray_team.kotoed_plugin</id>
    <name>Kotoed plugin</name>
    <version>0.0.2</version>
    <vendor email="neon-pf@yandex.ru">gray_team</vendor>

    <description><![CDATA[
    plugin for kotoed system
    ]]></description>


    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Kotoed" anchor="right" factoryClass="plugin.gui.KotoedPlugin"/>
    </extensions>

    <actions>
        <action id="plugin.gui.CustomizeEditor" class="plugin.gui.Utils.CustomizeEditor" text="Editor Basics"
                description="Illustrates how to plug an action in">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>